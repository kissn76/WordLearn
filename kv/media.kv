#:kivy 2.2.1

<MediaList>:
    orientation: "vertical"
    AnchorLayout:
        height: 40
        size_hint_y: None
        anchor_x: "right"
        anchor_y: "top"
        padding: 6

        Button:
            text: "+"
            size_hint_x: None
            width: 40
            on_release: root.add()
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            id: item_list
            orientation: "vertical"
            MediaElementItem

<MediaElementItem>:
    orientation: "horizontal"
    # size_hint_y: None
    # height: 40
    Label:
        id: name
        text: "name"
    Label:
        id: type
        text: "type"
    Label:
        id: path
        text: "path"
    Label:
        id: description
        text: "description"

<MediaAddPopup>:
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            Label:
                text: "Name"
                size_hint_x: None
            TextInput:
                id: name_input
                multiline: False
            Label:
                text: "Type"
                size_hint_x: None
            MediaTypeChooser:
                id: type_input
            Label:
                text: "Path"
                size_hint_x: None
            MediaFileChooser:
                id: path_input
            Label:
                text: "Description"
                size_hint_x: None
            TextInput:
                id: description_input
                multiline: True
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            BoxLayout:
                orientation: "horizontal"
                size_hint_x: None
                size_hint_y: None
                Button:
                    text: "Add"
                    on_release: root.add()
                    size_hint_x: None
                    size_hint_y: None
                    height: 40
                Button:
                    text: "Cancel"
                    on_release: root.dismiss()
                    size_hint_x: None
                    size_hint_y: None
                    height: 40

<MediaFileChooser>:
    Button:
        id: mainbutton
        text: 'Select media...'
        on_release: root.popup.open()

<MediaFileChooserPopup>:
    BoxLayout:
        FileChooserIconView:
            id: filechooser
            on_selection: root.image_set()
        Image:
            id: image
            source: None
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            BoxLayout:
                orientation: "horizontal"
                size_hint_x: None
                size_hint_y: None
                Button:
                    text: "Add"
                    on_release: root.add()
                    size_hint_x: None
                    size_hint_y: None
                    height: 40
                Button:
                    text: "Cancel"
                    on_release: root.dismiss()
                    size_hint_x: None
                    size_hint_y: None
                    height: 40
