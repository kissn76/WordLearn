#:kivy 2.2.1

<MainPanel>:
    orientation: "vertical"

    MDBoxLayout:
        orientation: "horizontal"
        adaptive_height: True
        padding: 6
        spacing: 6

        MDFloatingActionButton:
            icon: "menu"

        MDFloatingActionButton:
            icon: "database-off"
            on_release: root.database_del()

        MDFloatingActionButton:
            icon: "database"
            on_release: root.database_create()

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        padding: 6
        spacing: 6

        MDRaisedButton:
            text: "Word Types"
            on_release: root.open_wordtype_popup()

