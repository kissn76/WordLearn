<AssetList>:
    MDBoxLayout:
        orientation: "vertical"
        padding: 6
        spacing: 6

        MDFloatingActionButton:
            icon: "plus"
            on_release: root.add()

        MDScrollView:
            MDList:
                id: item_list

        MDRaisedButton:
            text: "Close"
            adaptive_height: True
            on_release: root.dismiss()

        Widget

<Chooser>:
    on_release: root.popup_open()

<ChooserPopup>
    MDScrollView:
        MDList:
            id: list

<ChooserElement>
    on_release: root.callback(self.text, self.secondary_text)
