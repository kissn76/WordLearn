#:kivy 2.2.1

<WordTypeList>:
    MDBoxLayout:
        orientation: "vertical"

        MDFloatingActionButton:
            icon: "plus"
            on_release: root.add()

        MDScrollView:
            MDBoxLayout:
                id: item_list
                orientation: "vertical"
                adaptive_height: True
                WordTypeElementItem

        MDRaisedButton:
            text: "Close"
            adaptive_height: True
            on_release: root.dismiss()

        Widget

<WordTypeElementItem>:
    orientation: "horizontal"
    size_hint_y: None
    height: 40
    MDLabel:
        id: code
        text: "code"
    MDLabel:
        id: name
        text: "name"
    MDLabel:
        id: description
        text: "description"

<WordTypeAddPopup>:
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            Label:
                text: "Code"
                size_hint_x: None
            TextInput:
                id: code_input
                multiline: False
            Label:
                text: "Name"
                size_hint_x: None
            TextInput:
                id: name_input
                multiline: False
            Label:
                text: "Description"
                size_hint_x: None
            TextInput:
                id: description_input
                multiline: True
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            BoxLayout:
                orientation: "horizontal"
                size_hint_x: None
                size_hint_y: None
                Button:
                    text: "Add"
                    on_release: root.add()
                    size_hint_x: None
                    size_hint_y: None
                    height: 40
                Button:
                    text: "Cancel"
                    on_release: root.dismiss()
                    size_hint_x: None
                    size_hint_y: None
                    height: 40
