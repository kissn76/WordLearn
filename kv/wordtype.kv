#:kivy 2.2.1

<WordTypeList>:
    orientation: "vertical"
    AnchorLayout:
        height: 40
        size_hint_y: None
        anchor_x: "right"
        anchor_y: "top"
        padding: 6

        Button:
            text: "+"
            size_hint_x: None
            width: 40
            on_release: root.add()
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            id: item_list
            orientation: "vertical"
            WordTypeElementItem

<WordTypeElementItem>:
    orientation: "horizontal"
    # size_hint_y: None
    # height: 40
    Label:
        id: code
        text: "code"
    Label:
        id: name
        text: "name"
    Label:
        id: description
        text: "description"

<WordTypeAddPopup>:
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            Label:
                text: "Code"
                size_hint_x: None
            TextInput:
                id: code_input
                multiline: False
            Label:
                text: "Name"
                size_hint_x: None
            TextInput:
                id: name_input
                multiline: False
            Label:
                text: "Description"
                size_hint_x: None
            TextInput:
                id: description_input
                multiline: True
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            BoxLayout:
                orientation: "horizontal"
                size_hint_x: None
                size_hint_y: None
                Button:
                    text: "Add"
                    on_release: root.add()
                    size_hint_x: None
                    size_hint_y: None
                    height: 40
                Button:
                    text: "Cancel"
                    on_release: root.dismiss()
                    size_hint_x: None
                    size_hint_y: None
                    height: 40
